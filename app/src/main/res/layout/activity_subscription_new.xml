<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    tools:context=".SubscriptionActivityNew">

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:text="Subscription"/>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/tv"
        android:layout_marginRight="20dp"
        android:scrollbarAlwaysDrawHorizontalTrack="true"
        android:layout_marginLeft="5dp"
        android:screenReaderFocusable="true"
        android:scrollbarThumbHorizontal="@color/white"
        >


     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:layout_marginRight="20dp">


             <androidx.cardview.widget.CardView
                 android:layout_width="350dp"
                 android:layout_height="500dp"
                 android:layout_margin="20dp"
                 app:cardCornerRadius="20dp"
                 app:cardElevation="10dp"
                 >
                 <RelativeLayout
                     android:layout_width="match_parent"
                     android:layout_height="match_parent">

                     <View
                         android:id="@+id/view1"
                         android:layout_width="match_parent"
                         android:layout_height="150dp"
                         android:background="@drawable/mixcolorcombo"

                         />
                     <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_marginTop="50dp"
                         android:textColor="@color/white"
                         android:textStyle="bold"
                         android:text="₹99"
                         android:textSize="50sp"
                         android:layout_centerHorizontal="true"/>

                     <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_centerHorizontal="true"
                         android:layout_marginTop="120dp"
                         android:text="Per Annum"
                         android:textSize="20sp"
                         android:textStyle="bold"
                         android:textColor="@color/white"/>

                     <RelativeLayout
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:layout_below="@+id/view1">

                         <View
                             android:layout_width="wrap_content"
                             android:layout_height="400dp"

                             android:background="@color/lightblack"/>
                         <TextView
                             android:id="@+id/tv1"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:text="Contains Adds"
                             android:textColor="@color/white"
                             android:textSize="22sp"
                             android:textStyle="bold"
                             android:layout_centerHorizontal="true"
                             android:layout_marginTop="15dp"/>
                         <TextView
                             android:id="@+id/tv2"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:text="Indian videos Access (Limited)"
                             android:textColor="@color/white"
                             android:textSize="22sp"
                             android:textStyle="bold"
                             android:layout_below="@+id/tv1"
                             android:layout_centerHorizontal="true"
                             android:layout_marginTop="15dp"/>
                         <TextView
                             android:id="@+id/tv3"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:text="No Cloud Backup"
                             android:textColor="@color/white"
                             android:textSize="22sp"
                             android:textStyle="bold"
                             android:layout_below="@+id/tv2"
                             android:layout_centerHorizontal="true"
                             android:layout_marginTop="15dp"/>




                         <TextView
                             android:id="@+id/tv4"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:text="Single Device"
                             android:textColor="@color/white"
                             android:textSize="22sp"
                             android:textStyle="bold"
                             android:layout_below="@+id/tv3"
                             android:layout_centerHorizontal="true"
                             android:layout_marginTop="15dp"/>

                         <TextView
                             android:id="@+id/tv5"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:text="SD Video Resolution"
                             android:textColor="@color/white"
                             android:textSize="22sp"
                             android:layout_below="@+id/tv4"
                             android:layout_centerHorizontal="true"
                             android:textStyle="bold"
                             android:layout_marginTop="15dp"/>


                         <TextView
                             android:id="@+id/tv6"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:text="No Downloads"
                             android:textColor="@color/white"
                             android:textSize="22sp"
                             android:textStyle="bold"
                             android:layout_below="@+id/tv5"
                             android:layout_centerHorizontal="true"
                             android:layout_marginTop="15dp"/>


                         <Button
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:text="Continue to CheckOut"
                             android:textColor="@color/white"
                             android:layout_marginTop="25dp"
                             android:backgroundTint="#4973EF"
                             android:layout_centerHorizontal="true"
                             android:layout_below="@id/tv6"
                             android:id="@+id/pay_btn1"/>


                     </RelativeLayout>


                 </RelativeLayout>


             </androidx.cardview.widget.CardView>




         <androidx.cardview.widget.CardView
             android:layout_width="350dp"
             android:layout_height="500dp"
             android:layout_margin="20dp"
             app:cardCornerRadius="20dp"
             app:cardElevation="10dp"
             >

             <RelativeLayout
                 android:layout_width="match_parent"
                 android:layout_height="match_parent">


             <View
                 android:id="@+id/view11"
                 android:layout_width="match_parent"
                 android:layout_height="150dp"
                 android:background="@drawable/mixcolorcombo2"

                 />
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="50dp"
                 android:textColor="@color/white"
                 android:textStyle="bold"
                 android:text="₹599"
                 android:textSize="50sp"
                 android:layout_centerHorizontal="true"/>

             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_centerHorizontal="true"
                 android:layout_marginTop="120dp"
                 android:text="Per Annum"
                 android:textSize="20sp"
                 android:textStyle="bold"
                 android:textColor="@color/white"/>

             <RelativeLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_below="@+id/view11">

                 <View
                     android:layout_width="wrap_content"
                     android:layout_height="400dp"
                     android:background="@color/lightblack"/>
                 <TextView
                     android:id="@+id/tv11"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="No Adds"
                     android:textColor="@color/white"
                     android:textSize="22sp"
                     android:textStyle="bold"
                     android:layout_centerHorizontal="true"
                     android:layout_marginTop="15dp"/>
                 <TextView
                     android:id="@+id/tv21"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="All Indian Video Access"
                     android:textColor="@color/white"
                     android:textSize="22sp"
                     android:textStyle="bold"
                     android:layout_below="@+id/tv11"
                     android:layout_centerHorizontal="true"
                     android:layout_marginTop="15dp"/>
                 <TextView
                     android:id="@+id/tv31"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="5GB Cloud Backup"
                     android:textColor="@color/white"
                     android:textSize="22sp"
                     android:textStyle="bold"
                     android:layout_below="@+id/tv21"
                     android:layout_centerHorizontal="true"
                     android:layout_marginTop="15dp"/>
                 <TextView
                     android:id="@+id/tv41"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="2 Devices"
                     android:textColor="@color/white"
                     android:textSize="22sp"
                     android:textStyle="bold"
                     android:layout_below="@+id/tv31"
                     android:layout_centerHorizontal="true"
                     android:layout_marginTop="15dp"/>

                 <TextView
                     android:id="@+id/tv51"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="SD Video Resolution"
                     android:textColor="@color/white"
                     android:textSize="22sp"
                     android:layout_below="@+id/tv41"
                     android:layout_centerHorizontal="true"
                     android:textStyle="bold"
                     android:layout_marginTop="15dp"/>


                 <TextView
                     android:id="@+id/tv61"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="Unlimited Downloads"
                     android:textColor="@color/white"
                     android:textSize="22sp"
                     android:textStyle="bold"
                     android:layout_below="@+id/tv51"
                     android:layout_centerHorizontal="true"
                     android:layout_marginTop="15dp"/>


                 <Button
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="Continue to CheckOut"
                     android:textColor="@color/white"
                     android:layout_marginTop="25dp"
                     android:backgroundTint="#4973EF"
                     android:layout_centerHorizontal="true"
                     android:layout_below="@id/tv61"
                     android:id="@+id/pay_vip_btn2"/>
             </RelativeLayout>

             </RelativeLayout>

         </androidx.cardview.widget.CardView>


         <androidx.cardview.widget.CardView
             android:layout_width="350dp"
             android:layout_height="500dp"
             android:layout_margin="20dp"
             app:cardCornerRadius="20dp"
             app:cardElevation="10dp"
            >
             <RelativeLayout
                 android:layout_width="match_parent"
                 android:layout_height="match_parent">

                 <View
                     android:id="@+id/view13"
                     android:layout_width="match_parent"
                     android:layout_height="150dp"
                     android:background="@drawable/mixcolorcombo3"
                    />
                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_marginTop="50dp"
                     android:textColor="@color/white"
                     android:textStyle="bold"
                     android:text="₹1199"
                     android:textSize="50sp"
                     android:layout_centerHorizontal="true"/>

                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_centerHorizontal="true"
                     android:layout_marginTop="120dp"
                     android:text="Per Annum"
                     android:textSize="20sp"
                     android:textStyle="bold"
                     android:textColor="@color/white"/>

                 <RelativeLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_below="@+id/view13">

                     <View
                         android:layout_width="wrap_content"
                         android:layout_height="400dp"

                         android:background="@color/lightblack"/>
                     <TextView
                         android:id="@+id/tv13"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="No Adds"
                         android:textColor="@color/white"
                         android:textSize="22sp"
                         android:textStyle="bold"
                         android:layout_centerHorizontal="true"
                         android:layout_marginTop="15dp"/>
                     <TextView
                         android:id="@+id/tv23"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="All Video Access"
                         android:textColor="@color/white"
                         android:textSize="22sp"
                         android:textStyle="bold"
                         android:layout_below="@+id/tv13"
                         android:layout_centerHorizontal="true"
                         android:layout_marginTop="15dp"/>
                     <TextView
                         android:id="@+id/tv33"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="10GB Cloud Backup"
                         android:textColor="@color/white"
                         android:textSize="22sp"
                         android:textStyle="bold"
                         android:layout_below="@+id/tv23"
                         android:layout_centerHorizontal="true"
                         android:layout_marginTop="15dp"/>
                     <TextView
                         android:id="@+id/tv43"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="5 Devices"
                         android:textColor="@color/white"
                         android:textSize="22sp"
                         android:textStyle="bold"
                         android:layout_below="@+id/tv33"
                         android:layout_centerHorizontal="true"
                         android:layout_marginTop="15dp"/>

                     <TextView
                         android:id="@+id/tv53"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="HD Video Resolution"
                         android:textColor="@color/white"
                         android:textSize="22sp"
                         android:layout_below="@+id/tv43"
                         android:layout_centerHorizontal="true"
                         android:textStyle="bold"
                         android:layout_marginTop="15dp"/>


                     <TextView
                         android:id="@+id/tv63"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="Unlimited Downloads"
                         android:textColor="@color/white"
                         android:textSize="22sp"
                         android:textStyle="bold"
                         android:layout_below="@+id/tv53"
                         android:layout_centerHorizontal="true"
                         android:layout_marginTop="15dp"/>


                     <Button
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="Continue to CheckOut"
                         android:textColor="@color/white"
                         android:layout_marginTop="25dp"
                         android:backgroundTint="#4973EF"
                         android:layout_centerHorizontal="true"
                         android:layout_below="@id/tv63"
                         android:id="@+id/pay_premium_btn3"/>


                 </RelativeLayout>




             </RelativeLayout>


         </androidx.cardview.widget.CardView>


     </LinearLayout>


    </HorizontalScrollView>




</RelativeLayout>