<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="75dp"
  >


    <ImageView
        android:layout_marginTop="10dp"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_launcher_background"
        android:layout_marginLeft="5dp"
        android:id="@+id/rec_img"/>

    <TextView
        android:id="@+id/title_music_recc"
        android:layout_width="374dp"
        android:layout_height="30dp"

        android:layout_marginTop="16dp"
        android:ellipsize="end"
        android:text="@string/title"
        android:textColor="#EAE3E3"
        android:maxLines="1"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="120dp"
        android:textSize="18sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/musicdownlaod"
        android:layout_width="25dp"
        android:layout_height="35dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="300dp"
        android:layout_marginBottom="72dp"
        android:src="@drawable/circulardownload"/>

    <ImageView
        android:id="@+id/musicdownlaoddone"
        android:layout_width="25dp"
        android:layout_height="35dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="300dp"
        android:visibility="gone"
        android:layout_marginBottom="72dp"
        android:src="@drawable/ic_launcher_background"/>
    <ImageView
        android:id="@+id/musicmenu"
        android:layout_width="25dp"
        android:layout_height="35dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="350dp"
        android:layout_marginBottom="72dp"
        android:src="@drawable/dots"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:layout_marginTop="4dp"
        android:layout_below="@+id/rec_img"
        android:background="@color/purple_200" />


</RelativeLayout>