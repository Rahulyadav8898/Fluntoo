<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="150dp"
        android:layout_height="170dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@color/grey1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!--        android:layout_marginRight="2dp"-->


            <ImageView
                android:id="@+id/trend_poster_img"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="3dp"
                android:background="@color/grey1"
                android:scaleType="fitXY" />

            <androidx.cardview.widget.CardView
                android:id="@+id/trend_channel_img"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_below="@id/trend_poster_img"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp"
                android:backgroundTint="@color/grey1"
                app:cardCornerRadius="130dp" />

            <TextView
                android:id="@+id/trend_title_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/trend_poster_img"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="5dp"
                android:layout_toRightOf="@+id/trend_channel_img"
                android:background="@color/grey1"
                android:ellipsize="end"
                android:fontFamily="@font/roboto_medium_numbers"
                android:maxLines="2"
                android:textColor="@color/white"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/views_trend_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/trend_title_tv"
                android:layout_marginLeft="30dp"
                android:background="@color/grey1"
                android:textColor="@color/white"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/trend_channelname_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/trend_title_tv"

                android:layout_marginLeft="2dp"
                android:layout_marginTop="10dp"
                android:background="@color/grey1"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="normal" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>